<!DOCTYPE html>
<html lang="en">
<head>
  <title>Hospital</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

  <% if (messages.error) { %>
  <p class="alert alert-danger mt-4"><%- messages.error %></p>
  <% } %> 
  
  <% if (messages.success) { %>
  <p class="alert alert-success mt-4"><%- messages.success %></p>
  <% } %> 

  <div class="container">

    <div class="row" style="margin-top: 40px;">
      <div class="col-md-12">
        <a href="../doctor/list" class="btn btn-primary"> Doctor List </a>
      </div>
    </div>

    <div class="row">
     <h3>Add Doctor Profile</h3>
     <form action="/doctor/add" method="post" name="form" enctype="multipart/form-data">
      <div class="form-group">
        <label>Doctor Name</label>
        <input type="text" class="form-control" name="name" placeholder="Doctor Name">
      </div>
      <div class="form-group">
        <label>Doctor Qualification</label>
        <input type="text" class="form-control" name="course" placeholder="Doctor Qualification">
      </div>

      <div class="form-group">
        <label>Doctor Specialists</label>
        <% if(data.length){
          for(var i = 0; i< data.length; i++) {%>
          <div class="checkbox">
            <label><input type="checkbox" name="specialists[]" value="<%= data[i].sp_id%>"><%= data[i].subject%></label>
          </div>
          <% } } %>  
        </div>

        <div class="form-group">
          <label>Doctor Photo</label>
          <input type="file" name="file" class="form-control" id="file">
        </div>
        <input type="submit" class="btn btn-primary" value="Add Doctor">
      </form>
    </div>
  </div>

</body>
</html>
